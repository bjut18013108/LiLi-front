/* pages/orders/orders.wxss */

page {
    height: 100%;
}

.container {
    padding: 0;
    width: 100%;
    height: 100%;
    background-color: white;
}

.selector {
    height: 50pt;
    width: 100%;
    display: flex;
    flex-direction: row;
}

.order-img {
    flex: 1;
    height: 30pt;
    padding-top: 5pt;
    padding-left: 10pt;
    padding-bottom: 5pt;
}

.all, .unfinished, .finished {
    flex: 2;
    height: 30px;
    line-height: 30px;
    border-radius: 5px;
    text-align:center;
    /* border: 1px solid gray; */
    background-color: rgb(146, 199, 204);
    color: white;
    margin: 10px 15px 10px 15px;
}

.orders {
    overflow: hidden; 
    height: 100%;
    width: 100%;
    background-color: white;
}

.orderList {
    height: 100%;
}

.order {
    display: flex;
    flex-direction: column;
    height: 100pt;
    background-color: rgb(236, 236, 236);
    padding: 10px;
    border-radius: 15px;
    margin: 10pt;
}

.addrAndState {
    width: 100%;
    flex: 1;
    display: flex;
    flex-direction: row;
}

.addrAndState .state {
    color: #cecece;
    margin-left: auto;
}

.picAndInfo {
    width: 100%;
    flex: 3;
    display: flex;
    flex-direction: row;
}

.picAndInfo .pic {
    width: 150px;
    height: 100%
}

.picAndInfo .info {
    height: 100%;
    flex: 1;
    display: flex;
    flex-direction: column;
}

.picAndInfo .info .price {
    width: 100%;
    margin-top: auto;
    text-align: end;
}
.picAndInfo .info .cdkey {
    width: 100%;
    text-align: end;
}
