/* pages/orders/orders.wxss */

page {
    height: 100%;
}

.container {
    padding: 0;
    width: 100%;
    height: 100%;
    background-color: white;
}

.selector {
    height: 50pt;
    width: 100%;
    display: flex;
    flex-direction: row;
}

.order-img {
    flex: 1;
    height: 30pt;
    padding-top: 5pt;
    padding-left: 10pt;
    padding-bottom: 5pt;
}

.all, .unfinished, .finished {
    flex: 2;
    height: 25pt;
    line-height: 25pt;
    border-radius: 5pt;
    text-align:center;
    background-color: rgb(146, 199, 204);
    color: white;
    margin: 10pt 10pt 10pt 10pt;
}

.orders {
    overflow: hidden; 
    height: 100%;
    width: 100%;
    background-color: white;
}

.order-list {
    height: 100%;
}

.order {
    display: flex;
    flex-direction: column;
    height: 100pt;
    background-color: rgb(236, 236, 236);
    padding: 10px;
    border-radius: 15px;
    margin: 10pt;
}

.addr-and-state {
    width: 100%;
    flex: 1;
    display: flex;
    flex-direction: row;
}

.addr-and-state .addr {
    font-weight: 700;
}

.addr-and-state .warning {
    color: rgb(234, 88, 82);
    margin-left: auto;
    padding: 2pt;
    font-size: small;
    font-weight: 700;
}

.addr-and-state .state {
    color: black;
    margin-left: auto;
    background-color: rgb(178, 215, 217);
    border-radius: 5px;
    padding: 2pt;
    font-weight: 700;
}

.pic-and-info {
    width: 100%;
    flex: 3;
    display: flex;
    flex-direction: row;
}

.pic-and-info .pic {
    width: 140px;
    height: 100%;
}

.pic-and-info .info {
    height: 100%;
    flex: 1;
    display: flex;
    flex-direction: column;
}

.pic-and-info .info .price {
    width: 100%;
    margin-top: auto;
    text-align: end;
}

.pic-and-info .info .time { 
    width: 100%;
    text-align: end;
    margin-top: 10pt;
}
.pic-and-info .info .cdkey {
    width: 100%;
    color: rgb(79, 155, 141);
    text-align: end;
    font-weight: 700;
}
