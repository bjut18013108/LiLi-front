/* pages/shop/shop.wxss */

.container-1 {
    width: 100%;
    height: 100%;
    background-color: white;
}

.intro {
    background-color: white;
}

.shop-img {
    padding: 10pt 5% 0 5% ;
    width: 90%;
    height: 150pt;

}

.shop-name {
    margin: -8pt 5% 0 5% ;
    width: 90%;
    height: 25pt;
    background-color: rgb(146, 199, 204);
    color: white;
    font-weight: 700;
    font-size: x-large;
    text-align: center;
    line-height: 25pt;
}

.shop-hours {
    margin: 0 5% 0 5% ;
    padding: 0 0 1% 0;
    width: 90%;
    height: 20pt;
    background-color: rgb(146, 199, 204);
    
}

.shop-hours-text {
    color: rgb(71, 67, 67);
    text-align: center;
    line-height: 20pt;
    font-size: small;
    font-weight: 500;
    border-radius: 5pt;
    margin: 0 20% 0 20%;
}

.status {
    background-color: rgb(218, 246, 139);
    padding: 2pt;
    border-radius: 3pt;
}

.addr {
    width: 90%;
    margin: 2% 5% 0 5% ;
    font-weight: 500;
    font-size: small;
}

.goods-area {
    background-color: white;
    width: 100%;
}

.good-item {
    background-color: rgb(236, 236, 236);
    width: 90%;
    margin: 5% 5% 0 5% ;
    display: flex;
    flex-direction: row;
    border-radius: 10pt;
}

.good-img {
    flex: 1;
    height: 60pt;
    margin: 10pt;
}

.good-info {
    flex: 2;
    margin-left: 10pt;
}

.good-name {
    margin-top: 10pt;
    font-weight: 700;
    font-size: larger;
}

.good-price {
    margin-top: 1pt;
}

.good-sales {
    margin-bottom: 5pt;
    font-size: small;
}

.remain {
    background-color: rgb(124, 223, 161);
    padding: 3pt;
    border-radius: 3pt;
}

.no-remain {
    background-color: rgb(233, 88, 84);
    padding: 3pt;
    border-radius: 3pt;
}