.container-1 {
    width: 100%;
    height: 100%;
    background-color: gray;
}

.intro {
    background-color: white;
}

.shop-img {
    padding: 10pt 5% 0 5% ;
    width: 90%;
    height: 150pt;

}

.shop-name {
    margin: -8pt 5% 0 5% ;
    width: 90%;
    height: 25pt;
    background-color: rgb(146, 199, 204);
    color: white;
    font-weight: 700;
    font-size: x-large;
    text-align: center;
