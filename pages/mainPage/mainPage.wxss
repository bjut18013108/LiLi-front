page {
    height: 100%;
}

.container-1 {
    display: flex;
    flex-direction: column;
    padding: 0;
    width: 100%;
    height: 250pt;
    background-color: gray;
}
.search-area {
    height: 70pt;
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 100%;
    background-color: rgb(178, 215, 217);
}
mp-searchbar {
    width: 100%;
    flex: 9;
}
.search-area .search-btn {
    flex: 1; 
    width: 30pt;
    height: 30pt;
    padding: 0px 20px 0px 10px;
}
.mainpage-background {
    width: 100%;
    height: 170pt;
}
.ribbon {
    flex:1;
    height: 30pt;
    width:100%;
    background-color: rgb(146, 199, 204);
}

.container-2 {
    padding: 0;
    width: 100%;
    background-color: gray;
}


.shops-area {
    width: 100%;
    background-color: white;
}


.shop-item {
    display: flex;
    flex-direction: row;
    height: 50pt;
    background-color: rgb(236, 236, 236);
    padding: 10px;
    border-radius: 10px;
    margin: 10pt;
}

.shop-pic {
    height: 50pt;
    width: 66pt;
}

.shop-info {
    flex: 1;

    display: flex;
    flex-direction: column;
}

.shop-name {
    /* text-align: center; */
    padding-left: 65pt;
    flex: 1;
}
.shop-hours {
    flex:1;
    display: flex;
    flex-direction: row;
}

.shop-hours-img {
    width: 20pt;
    height: 100%;
    padding-left: 40pt;
}

.shop-hours-text {
    flex: 1;
    padding-left: 5pt;
    padding-top: 2pt;
}
