/* pages/detail/detail.wxss */

.container-1 {
    width: 100%;
    height: 100%;
    background-color: white;
}

.intro {
    background-color: white;
}

.goods-img {
    padding: 10pt 5% 0 5% ;
    width: 90%;
    height: 150pt;
}

.goods-name {
    margin: 2% 5% 0 5% ;
    padding: 3% 5% 3% 5%;
    width: 80%;
    height: 25pt;
    background-color: rgb(146, 199, 204);
    color: white;
    font-weight: 700;
    font-size: x-large;
    text-align: center;
    line-height: 25pt;
    border-radius: 10pt;
}

.price {
    margin-left: 10pt;
}

.time {
    margin: 0 5% 0 5% ;
    padding: 2% 5% 3% 5%;
    width: 80%;
    height: 25pt;
    color: rgb(228, 170, 85);
    font-weight: 700;
    font-size: large;
    text-align: center;
    line-height: 25pt;
}

.goods-area {
    margin: 0 10% 0 10% ;
    padding: 10pt;
    background-color: rgb(233, 233, 233);
}

.avatar {
    width: 40pt;
    height: 40pt;
    margin-top: -20pt;
    margin-right: 15pt;
    float: right;
}

.purchase-button {
    background-color: rgb(244, 188, 65);
    color: white;
    margin:  10% 20% 0 20%;
    padding: 7pt;
    margin-bottom: 40pt;
    text-align: center;
    font-weight: 700;
    font-size: 20pt;
    border-radius: 10pt;
}