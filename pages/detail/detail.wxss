.container-1 {
    width: 100%;
    height: 100%;
    background-color: white;
}

.intro {
    background-color: white;
}

.goods-img {
    padding: 10pt 5% 0 5% ;
    width: 90%;
    height: 150pt;

}

.goods-name {
    margin: 2% 5% 0 5% ;
    padding: 3% 5% 3% 5%;
    width: 80%;
    height: 25pt;
    background-color: rgb(146, 199, 204);
    color: white;
    font-weight: 700;
