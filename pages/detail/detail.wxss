    border-radius: 10pt;
}

.price {
    margin-left: 10pt;
}

.time {
    margin: 0 5% 0 5% ;
    padding: 2% 5% 3% 5%;
    width: 80%;
    height: 25pt;
    color: rgb(228, 170, 85);
    font-weight: 700;
    font-size: large;
    text-align: center;
    line-height: 25pt;
}