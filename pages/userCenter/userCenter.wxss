page {
  height: 100%;
  background-color: white;
}

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  /* background-color: blue; */
}

 .my {
  width: 100%;
  height: 50pt;
  background-color: white;

  padding-left: 20pt;
  padding-top: 20pt;
  padding-bottom: 20pt;
  display: flex;
  flex-direction: row;
}

.avatar {
  width: 50pt;
  height: 100%;

  overflow: hidden;
  /* margin: 20rpx; */
  border-radius: 50%;
}

.userName {
  margin-left: 10pt;
  line-height: 50pt;
}

.setting {
  height: 30pt;
  width: 30pt;

  margin-left: auto;
  margin-right: 20pt;
  margin-top: 10pt;
  margin-bottom: 10pt;
}

.functions {
  flex: 1;
  width: 100%;
  /* background-color: red; */
}

.orders,.service,.clause {
  margin: 10pt 10pt 10pt 10pt;
  background-color: rgb(236, 236, 236);
  height: 60pt;
  line-height: 60pt;
  border-radius: 10pt;
  padding-right: 5px;
  display: flex;
}

.figs {
  padding-top: 15pt;
  padding-bottom: 15pt;
  height: 30pt;
  width: 30pt;
  margin-left: 15pt;
}

.font {
  text-align: center;
  font-weight: 400;
  font-size:15pt;
  margin-left: 15pt;
}