page {
  height: 100%;
  background-color: #ededed;
}

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  padding: 0;
  margin: 0;
  /* background-color: blue; */
}

 .my {
  width: 100%;
  height: 50px;
  background-color: white;

  padding-left: 20px;
  padding-top: 20px;
  padding-bottom: 20px;
  display: flex;
  flex-direction: row;
}

.avatar {
  width: 50px;
  height: 100%;

  overflow: hidden;
  /* margin: 20rpx; */
  border-radius: 50%;
}

.userName {
  margin-left: 10px;
  line-height: 50px;
}

.setting {
  height: 100%;
  /* flex: 1; */
  width: 50px;
  border: 1px solid gray;
  border-radius: 10px;

  margin-left: auto;
  margin-right: 20px;
}

.functions {
  flex: 1;
  width: 100%;
  /* background-color: red; */
}

.orders,.service,.clause {
  background-color: white;
  height: 50px;
  line-height: 50px;
  border: 1px solid gray;
  border-radius: 5px;
  margin: 10px;
  padding-left: 5px;
  padding-right: 5px;
}